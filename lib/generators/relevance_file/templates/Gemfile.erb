source :rubygems

gem 'rails', '~> 3.2.2'
# Avoiding 3.1.5 which has a bug with aliasing
# AbstractController::Rendering#render_to_body
# https://github.com/haml/haml/issues/519
gem 'haml', '>= 3.1.0', '<= 3.1.4'
gem 'configatron', '~> 2.8.3'
gem 'airbrake', '~> 3.0.4'
gem 'factory_girl_rails', '~> 1.2.0'
gem 'jquery-rails', '~> 1.0.14'
gem 'therubyracer'
<%- if database == 'mysql' -%>
gem 'mysql2', '~> 0.3.11'
<%- end -%>
<%- if database == 'postgresql' -%>
gem 'pg', '~> 0.13.2'
<%- end -%>

# Gems used only for assets and not required
# in production environments by default.
group "assets" do
  gem 'sass-rails', '~> 3.2.2'
  gem 'coffee-rails', '~> 3.2.2'
  gem 'uglifier', '>= 1.0.3'
end

group "development" do
  gem 'pry'
end

group "development", "test" do
  gem 'capybara', '~> 1.1.1'
  gem 'selenium-webdriver', '~> 2.5.0'
  gem 'rspec-rails', '~> 2.9.0'
  gem 'mocha', '~> 0.9.12'
  gem 'guard-rspec', '~> 0.5.0', :require => false
  gem 'growl', '~> 1.0.3', :require => false
  gem 'rb-fsevent', '~> 0.9.0', :require => false
  gem 'capistrano', '~> 2.11.2'
  gem 'capistrano-ext', '1.2.1', :require => nil
  gem 'capistrano_colors'
  gem 'relevance_rails', '<%= RelevanceRails::VERSION %>'
end
